
while (defined($_ = <STDIN>)) {
   chomp;
   $print = 0;
   if (/^(... .. ..:..:..)/) {
      $time = $1;
   }
   s/^... .. ..:..:.. [^ ]* [^ ]*\[\d*\]: //;
   s/^... .. ..:..:.. [^ ]* [^ ]*: //;

   if (/^raid/) {
      if (/failure/) { $print = 1; }
      if (/redirecting/) { $print = 1; }
      if (/rescheduling/) { $print = 1; }
   } elsif (/^md/) {
      if (/skipping faulty/) { $print = 1; }
      if (/degraded mode/)  { $print = 1; }
   } elsif (/^hd/) {
      if (/dma_intr/) { $print = 1; }
   } elsif (/^end_request/) {
      if (! /floppy/) { $print = 1; }
   } else {
      next;
   }
   if ($print) {
      print("$time $_ \n");
   }
}

